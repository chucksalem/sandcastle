$('#hotellist_view').html("<%= escape_javascript(render :partial => 'rentals/hotellist') %>")
$('#hotelgrid_view').html("<%= escape_javascript(render :partial => 'rentals/hotelgrid') %>")
$('.header-total-result-count').html("<%= escape_javascript(render :partial => 'rentals/hotel_count') %>")

$('.book-now').on('click' ,function(){
  $("#date_filter").valid();
  var id = $(this).val();
  var start_date = $('#start_date').val();
  var end_date = $('#end_date').val();
  if (start_date != '' && end_date != '') {
    window.location = '/booking-form?id='+ id+'&start_date='+ start_date +'&end_date='+ end_date;
  }
});