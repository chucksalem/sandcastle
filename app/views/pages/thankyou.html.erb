<% content_for :header_class, 'thankyou_page_content' %>
<% content_for :hero_title, "THANK YOU!".html_safe %> <!-- Hero/Page Title -->
<% content_for :hero_size, 'hero-small' %> <!-- What's the hero size for the header? -->
<% content_for :bottom_border, 'bottom-border' %> <!-- Does the header have a bottom border in the hero? -->
<div class="section-divider rent-thankyou-divider">
  <img src="assets/vacation-summary.png">
</div>

<div class="section-divider rent-thankyou-divider">
  <span class="rent-details-span">RATE DETAILS </span><span>  |  </span><span class="thank-you-span"> THANK YOU</span>
</div>
<section id="visitors-help" class="scallop-top beige-bg thankyou-page-content-section" xmlns="http://www.w3.org/1999/html">
  <div class="layout-container">
    <div class="col-sm-8">
      <div class="thank-you-greeting-receipt">
        <div class="thankyou-common-div sandcastle-text-capitalization sandcastle-bold thanks-to-user">THANK YOU <%= @booking_info[:first_name] %>!</div>
        <div class="thankyou-common-div sandcastle-text-capitalization sandcastle-bold booking-formatiom-alert-text">Your booking order is confirmed now.</div>
        <div class="thankyou-common-div confirmation-email-text">A confirmation email has been sent to your provided email address</div>
        <div class="thankyou-common-div"><i class="fa fa-print thankyou-print-fa sandcastle-text-color" aria-hidden="true"></i><input type="button" class="sandcastle-text-capitalization sandcastle-text-color print-booking-details-button" onclick="window.print();" value="Print Details"></div>
      </div>
      <div class="booking-receipt-details table-responsive">
        <div class="booking-receipt-headings common-font-20 sandcastle-bold">YOUR INFORMATION</div>
        <table class="table table-bordered">
          <tbody>
          <tr class="odd">
            <td class="common-font-10">Booking Number</td>
            <td class="sandcastle-bold common-font-10">123456</td>
          </tr>
          <tr class="even">
            <td class="common-font-10">First Name</td>
            <td class="sandcastle-bold common-font-10"><%= @booking_info[:first_name] %></td>
          </tr>
          <tr class="odd">
            <td class="common-font-10">Last name</td>
            <td class="sandcastle-bold common-font-10"><%= @booking_info[:last_name] %></td>
          </tr>
          <tr class="even">
            <td class="common-font-10">Email Address</td>
            <td class="sandcastle-bold common-font-10"><%= @booking_info[:email] %></td>
          </tr>
          <tr class="odd">
            <td class="common-font-10">Street Address</td>
            <td class="sandcastle-bold common-font-10"><%= @booking_info[:address_primary] %></td>
          </tr>
          <tr class="even">
            <td class="common-font-10">Country</td>
            <td class="sandcastle-bold common-font-10"><%= @booking_info[:country] %></td>
          </tr>
          <tr class="odd">
            <td class="common-font-10">State/Providence</td>
            <td class="sandcastle-bold common-font-10"><%= @booking_info[:state] %></td>
          </tr>
          <tr class="even">
            <td class="common-font-10">City</td>
            <td class="sandcastle-bold common-font-10"><%= @booking_info[:city] %></td>
          </tr>
          <tr class="odd">
            <td class="common-font-10">Zip code</td>
            <td class="sandcastle-bold common-font-10"><%= @booking_info[:zip] %></td>
          </tr>
          </tbody>
        </table>
        <div class="receipt-payment-section">
          <div class="booking-receipt-headings sandcastle-text-capitalization sandcastle-bold common-font-20">Payment</div>
          <a class="thankyou-common-div sandcastle-text-color sandcastle-text-capitalization thankyou-credit-card-receipt-text">Payment was made by credit card. Click here to view your receipt.</a>
        </div>
        <div class="receipt-booking-details-section">
          <div class="booking-receipt-headings sandcastle-text-capitalization sandcastle-bold common-font-20">Booking Details</div>
          <div class="thankyou-page-hotel-photo thankyou-common-div"><img src= "<%= @booking_info[:unit_image] %>"></div>
          <div class="thankyou-common-div sandcastle-text-capitalization sandcastle-bold common-font-14"><%= truncate(@booking_info[:unit_name], :length => 25) %></div>
          <div class="common-font-9"><%= @booking_info[:unit_city] %>, <%= @booking_info[:unit_country] %></div>
          <div class=""><a class="thankyou-view-map-link sandcastle-text-color common-font-9" href="/maps">View Map</a></div>
        </div>
        <div class="line-separator"></div>
        <div class="thankyou-common-div hotel-stay-duration common-font-11"><span class="stay-duration-span"><i class="fa fa-clock-o common-font-12" aria-hidden="true"></i> <%= @booking_info[:unit_stay]%> NIGHTS</span> <%= @booking_info[:unit_start]%>/<%= @booking_info[:unit_end] %></div>
        <div class="line-separator"></div>
        <div class="panel panel-default hotel-details-panel">
          <div class="panel-heading sandcastle-text-capitalization">
            <div class="sandcastle-bold thankyou-common-div common-font-16">Details</div>
          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-condensed">
                <tbody>
                <tr>
                  <td class="sandcastle-text-color sandcastle-text-capitalization common-font-12">Type</td>
                  <td class="text-right common-font-12 text-uppercase"><%= @booking_info[:unit_type] %></td>
                </tr>
                <tr>
                  <td class="sandcastle-text-color sandcastle-text-capitalization common-font-12">Rent</td>
                  <td class="text-right common-font-12">$<%= @booking_info[:unit_amount] %></td>
                </tr>
                <tr>
                  <td class="sandcastle-text-color sandcastle-text-capitalization common-font-12"><%= @booking_info[:unit_fees_name1] %></td>
                  <td class="text-right common-font-12">$<%= @booking_info[:unit_fees_fee1] %></td>
                </tr>
                <tr>
                  <td class="sandcastle-text-color sandcastle-text-capitalization common-font-12"><%= @booking_info[:unit_fees_name2] %></td>
                  <td class="text-right common-font-12">$<%= @booking_info[:unit_fees_fee2] %></td>
                </tr>
                <tr>
                  <td class="sandcastle-text-color sandcastle-text-capitalization common-font-12">TAX</td>
                  <td class="text-right common-font-12">$<%= @booking_info[:tax] %></td>
                </tr>
                <tr>
                  <td class="sandcastle-text-capitalization sandcastle-bold common-font-16 total-price-common">Total Price</td>
                  <td class="text-right sandcastle-bold total-price-number total-price-common"><span class="common-font-24">$<%= @booking_info[:total] %></span></td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="col-md-4 want-to-chat-container">
      <div class="form-group">
        <label class="want-to-chat-header">WANT TO CHAT?</label>
      </div>
      <div class="checkbox">
        <i class="fa fa-phone" aria-hidden="true"></i><label> (888) 328-841</label>
      </div>
      <div class="checkbox">
        <i class="fa fa-envelope-o" aria-hidden="true"></i><label> info@gooceano.com</label>
      </div>
    </div>
  </div>
  <div class="first-section-divider"></div>
</section>