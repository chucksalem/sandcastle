<% content_for :header_class, 'contact-us-main' %>
<% content_for :hero_size, 'hero-small' %> <!-- What's the hero size for the header? -->
<% content_for :bottom_border, 'bottom-border' %> <!-- Does the header have a bottom border in the hero? -->


<link href="//fonts.googleapis.com/css?family=Montserrat:400normal|Grand+Hotel:400normal&amp;subset=all" rel="stylesheet" type="text/css">

<section class="top-padding-by-5 bg-image">

<div class = "contact-us">


    <form method="post" action="/contact/thank-you" class="contact-form">
        <%= tag(:input, type: "hidden", name: request_forgery_protection_token.to_s, value: form_authenticity_token) %>

         <div  class="contact-header">
                <h1 class = "grand-hotel">Contact Us</h1>
                <h2>WE'D LOVE TO HEAR FROM YOU</h2>
         </div>


        <input type="text" name="firstname" class="firstname text-box-height input-appear" placeholder = "NAME" autocomplete="off">

        <input type="text" name="emailId" class="email text-box-height input-appear" placeholder = "EMAIL ADDRESS" autocomplete="off">

        <textarea class="special-requests input-appear padding-top-15-px" rows="7" name="message" placeholder = "MESSAGE" ></textarea>

        <button type = "submit" class="btn btn-info btn-lg btn--blue">SEND MESSAGE &nbsp<i class = "fa fa-arrow-right"></i></button>
    </form>
</div>

<div class = "need-help">
    <div class="need-help-text-section">
        <h1 class = "grand-hotel">Need Help?</h1>
        <h2 class="we-are-here-text-color">WE ARE HERE</h2>
    </div>


    <div>
        <div class = "call-now">
         <i class = "fa fa-phone"></i>
            <div>CALL NOW!</div>
            <div><a href="tel:(888) 328-8491">(888) 328-8491</a></div>
        </div>

        <div class = "email-now">
            <i class = "fa fa-envelope-o"></i>
            <div>EMAIL NOW!</div>
            <div>
                 <a  href="mailto:INFO@SANDCASTLERENTALS.COM">
                    INFO@SANDCASTLERENTALS.COM
                </a>
            </div>
        </div>
    </div>
</div>
</section>

